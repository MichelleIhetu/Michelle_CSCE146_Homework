  public static int read(String text)
  {
    if(text == null){
        return 0;
    }
    
try {
    //seperate name and price of file

    //read the file
    Scanner fileScanner = new Scanner(new File("prizeList.txt"));
   
    //delimit 
String line = fileScanner.nextLine();

String[] prizeName = line.split("/t");
